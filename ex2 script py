import sys

def read_config():
    with open("config.txt", "r") as file:
        for line in file:
            if line.startswith("num="):
                return int(line.split("=")[1].strip())
    return None

if __name__ == "__main__":
    num_required = read_config()
    if num_required is None:
        print("Erro: par창metro 'num' n찾o encontrado no config.txt")
        sys.exit(1)
    
    if len(sys.argv) - 1 != num_required:
        print(f"Erro: O programa requer exatamente {num_required} par창metros.")
        sys.exit(1)
    
    print("Par창metros recebidos:", sys.argv[1:])
